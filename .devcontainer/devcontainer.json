// These are GitHub Codespaces specific settings.
{
  "name": "Wasp Todo App Tutorial",
  "customizations": {
    "vscode": {
      "extensions": ["wasp-lang.wasp", "PKief.material-icon-theme"],
      "settings": {
        "workbench.iconTheme": "material-icon-theme"
      }
    }
  },
  "containerEnv": {
    "WASP_TELEMETRY_DISABLE": "1", // TODO remove this
    "WASP_TELEMETRY_CONTEXT": "gh-codespaces"
  },
  "portsAttributes": {
    "3000": {
      "label": "React-Vite Client",
      "onAutoForward": "notify",
      "visibility": "public"
    },
    "3001": {
      "label": "NodeJS Server",
      "onAutoForward": "ignore",
      "visibility": "public"
    }
  },
  "postCreateCommand": "curl -sSL https://get.wasp-lang.dev/installer.sh | sh -s",
  "postStartCommand": "printf 'export WASP_WEB_CLIENT_URL=https://$CODESPACE_NAME-3000.preview.app.github.dev\n' >> $HOME/.bashrc && printf 'export REACT_APP_API_URL=https://$CODESPACE_NAME-3001.preview.app.github.dev\n' >> $HOME/.bashrc",
  "workspaceFolder": "/workspaces/wasp/examples/tutorials/TodoApp"
}