{
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleResolution": "nodenext",
    "moduleDetection": "force",
    "isolatedModules": true,

    // linting
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,

    "module": "NodeNext",
    "outDir": "dist",
    "declarationMap": true,

    "declaration": true,
    "lib": ["es2022"]
  },
  "include": ["src", "__tests__"]
}
