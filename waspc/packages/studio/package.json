  "license": "ISC",
  "main": "index.js",
  "keywords": [],
  "scripts": {
    "build": "npm run build:client && npm run remove:dist && tsc && npm run copy:public",
    "build:client": "npm --prefix ./client install && npm --prefix ./client run copy",
    "copy:public": "node -e \"require('fs').cpSync('./public', './dist/public', { recursive: true });\"",
    "dev": "tsx --watch ./src/index.ts",
    "remove:dist": "node -e \"require('fs').rmSync('./dist', { recursive: true, force: true });\"",
    "start": "node ./dist/index.js"
  },
  "dependencies": {
    "commander": "^14.0.0",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "morgan": "^1.10.0",
    "socket.io": "^4.8.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/morgan": "^1.9.10",
    "@types/node": "^22.17.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3"
  }
}
